---
interface Props {
  title: string
  description: string
}

const { title, description } = Astro.props
---

<div
  class="relative flex flex-col p-8 border border-light-primary hover:border-accent/30 hover:shadow-xl hover:shadow-accent/5 transition-all duration-300 group"
  role="listitem"
>
  <div
    class="absolute left-0 top-0 bottom-0 w-1 bg-accent/20 group-hover:w-1.5 group-hover:bg-accent transition-all duration-300"
  >
  </div>
  <h4
    class="text-lg sm:text-xl font-bold leading-tight text-dark-primary mb-3 group-hover:text-accent transition-colors duration-300"
  >
    {title}
  </h4>
  <p class="text-muted text-sm leading-relaxed">
    {description}
  </p>
</div>
