---
import { createContactURL } from "@/coruz.net.config";

interface Props {
  text: string;
  message: string;
}

const { text, message } = Astro.props;
---

<a
  class="bg-accent hover:bg-accent/90 text-white hover:text-white/90 transition-all duration-300 font-display font-medium py-2 px-4 text-base md:text-lg text-center"
  href={createContactURL("w", message)}
  target="_blank"
  rel="noopener noreferrer">{text}</a
>
