---
import { createContactURL } from '@/coruz.net.config'

interface Props {
  text: string
  message: string
  class?: string
}

const { text, message, class: className } = Astro.props
---

<a
  class:list={[
    'bg-accent hover:bg-accent/90 text-white hover:text-white/90 transition-all duration-300 font-display font-medium py-2 px-4 text-base md:text-lg text-center focus-visible:ring-2 focus-visible:ring-accent focus-visible:ring-offset-2 outline-none',
    className,
  ]}
  href={createContactURL('w', message)}
  target="_blank"
  rel="noopener noreferrer"
  aria-label={`${text} (abre WhatsApp en una nueva pestaÃ±a)`}>{text}</a
>
