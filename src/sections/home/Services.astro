---
import CTA from "@/components/CTA.astro";
import ServiceFeature from "@/components/ServiceFeature.astro";

import { Icon } from "astro-icon/components";

const servicesFeatures = [
  {
    feature: "Estructura multi-página",
    LPL: false,
    LPS: false,
    FW: true,
  },
  {
    feature: "Diseño adaptable",
    LPL: true,
    LPS: true,
    FW: true,
  },
  {
    feature: "Optimización de rendimiento",
    LPL: true,
    LPS: true,
    FW: true,
  },
  {
    feature: "Optimización para buscadores y LLMs",
    LPL: true,
    LPS: true,
    FW: true,
  },
  {
    feature: "Enlaces a redes sociales",
    LPL: true,
    LPS: true,
    FW: true,
  },
  {
    feature: "Botón de WhatsApp directo",
    LPL: true,
    LPS: true,
    FW: true,
  },
  {
    feature: "Google Maps integrado",
    LPL: true,
    LPS: true,
    FW: true,
  },
  {
    feature: "Correo profesional",
    LPL: false,
    LPS: true,
    FW: true,
  },
  {
    feature: "Alojamiento web por 12 meses",
    LPL: true,
    LPS: true,
    FW: true,
  },
  {
    feature: "Subdominio gestionado por CORUZ por 12 meses",
    LPL: true,
    LPS: false,
    FW: false,
  },
  {
    feature: "Nombre de dominio .com por 12 meses",
    LPL: false,
    LPS: true,
    FW: true,
  },
  {
    feature: "Certificado de seguridad SSL",
    LPL: true,
    LPS: true,
    FW: true,
  },
];
---

<section id="services2" class="py-32" aria-labelledby="services-title">
  <div class="main-container">
    <h2 class="text-center text-base font-black mb-8">Servicios</h2>
    <h3
      id="services-title"
      class="w-full xl:w-2/3 mx-auto text-center text-3xl sm:text-4xl font-bold leading-tight mb-6"
    >
      Elige la solución que mejor se adapta a tu negocio
    </h3>
    <p class="text-center text-base sm:text-lg leading-relaxed">
      Diseño y desarrollo de páginas web profesionales en México.
    </p>
    <div class="mt-20" role="table">
      <div
        class="grid w-full grid-cols-2 lg:grid-cols-[40%_30%_30%] border-b border-muted"
        role="row"
      >
        <h4
          class="hidden lg:flex justify-start items-end text-lg sm:text-xl font-bold leading-tight py-5"
          role="columnheader"
        >
          Características
        </h4>
        <div
          class="bg-white pt-5 flex flex-col gap-3 justify-start items-center text-center"
          role="columnheader"
        >
          <Icon
            name="landing-page"
            class="w-16 h-16 sm:w-20 sm:h-20"
            aria-hidden="true"
          />
          <h4 class="text-lg sm:text-xl font-bold leading-tight">
            Landing Page
          </h4>
          <p class="text-sm sm:text-base leading-relaxed mb-2 px-5">
            Página de una sola sección, ideal para emprendedores y negocios
            pequeños.
          </p>
          <div class="flex w-full border-t border-muted">
            <h5
              class="flex-1 py-5 font-bold text-sm sm:text-base leading-tight border-r border-muted"
            >
              Lite
            </h5>
            <h5
              class="flex-1 py-5 font-bold text-sm sm:text-base leading-tight"
            >
              Estándar
            </h5>
          </div>
        </div>
        <div
          class="py-5 flex flex-col gap-3 justify-start items-center text-center"
          role="columnheader"
        >
          <Icon
            name="full-web"
            class="w-16 h-16 sm:w-20 sm:h-20"
            aria-hidden="true"
          />
          <h4 class="text-lg sm:text-xl font-bold leading-tight">
            Web Completa
          </h4>
          <p class="text-sm sm:text-base leading-relaxed px-5">
            Sitio multipágina con secciones personalizadas para destacar tu
            marca y generar confianza.
          </p>
        </div>
      </div>
      {
        servicesFeatures.map((elemento) => (
          <ServiceFeature
            feature={elemento.feature}
            LPL={elemento.LPL}
            LPS={elemento.LPS}
            FW={elemento.FW}
          />
        ))
      }
      <div class="grid w-full grid-cols-2 lg:grid-cols-[40%_30%_30%]">
        <div class="hidden lg:block"></div>
        <div class="bg-white py-16 px-6 flex items-center justify-center">
          <CTA
            text="¡Quiero una Landing Page!"
            message="Buen día, quiero cotizar una landing page, ¿me podrías enviar información?"
          />
        </div>
        <div class="py-16 px-6 flex items-center justify-center">
          <CTA
            text="¡Quiero una Web Completa!"
            message="Buen día, quiero cotizar una web completa, ¿me podrías enviar información?"
          />
        </div>
      </div>
    </div>
  </div>
</section>
